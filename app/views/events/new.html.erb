<h1>Nuevo evento</h1>
<p>Regisra los datos del evento</p>

<%= form_with scope: :event, url: events_path, local: true do |form| %>

  <% if @event.errors.any? %>
    <div id="error_explanation" style="color: red">
      <h2>
        Hay <%= @event.errors.count %> <%= @event.errors.count.equal?(1) ? "error" : "errores" %> en el formulario:
      </h2>
      <ul>
        <% @event.errors.messages.each do |attr, msg| %>
          <li><%= msg[0] %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :name, 'Nombre:' %><br />
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :category, 'Categoría:' %><br />
    <%= form.select :category, @categories %>
  </p>

  <p>
    <%= form.label :location, 'Lugar:' %><br />
    <%= form.text_field :location %>
  </p>

  <p>
    <%= form.label :address, 'Dirección:' %><br />
    <%= form.text_field :address %>
  </p>

  <p>
    <%= form.label :event_type, 'Tipo:' %><br />
    <%= form.select :event_type, @types %>
  </p>

  <p>
    <%= form.label :date_init, 'Fecha de inicio:' %><br />
    <%= form.date_field :date_init %>
  </p>

  <p>
    <%= form.label :date_end, 'Fecha de finalización:' %><br />
    <%= form.date_field :date_end %>
  </p>

  <p>
    <%= form.submit 'Crear evento' %>
  </p>

<% end %>

<%= link_to 'Regresar', events_path %>
